---
menu:
  - folder: getting-started
    order: date
  - folder: creating-pages
    order: date
  - folder: plugins
    order: title
  - folder: advanced
    order: title
---
<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="preload" as="style" href="https://dev.jspm.io/npm:highlight.js@10.1.2/styles/monokai-sublime.css">
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap">
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=PT+Mono&display=swap">
    <link rel="stylesheet" href="{{ 'styles.css' | url }}">
    <link href="{{ 'favicon-32x32.png' | url }}" rel="icon" type="image/png" sizes="32x32">
    <meta name="description" content="{{ description }}">
    <script src="{{ '/js/scripts.js' | url }}" type="module"></script>
  </head>

  <body>
    <nav class="menu">
      <a href="{{ '/' | url }}" class="menu-logo">
        <img src="{{ 'logo.svg' | url }}" alt="Lume logo">
      </a>

      <button class="menu-button" type="button" id="menu-button">Menu</button>

      <ul class="menu-links">
        {% for section in menu %}
        <li>
          <strong>{{ search.data(section.folder).section }}</strong>
          <ul>
          {% for page in search.pages(section.folder, section.order) %}
            <li>
              {% if page.data.url == url %}
              <a href="{{ page.data.url | url }}" aria-current="page" title="{{ page.data.description }}">{{ page.data.title }}</a>
              {% else %}
              <a href="{{ page.data.url | url }}" title="{{ page.data.description }}">{{ page.data.title }}</a>
              {% endif %}
            </li>
          {% endfor %}
          </ul>
        </li>
        {% endfor %}
      </ul>
    </nav>

    <main class="main">
      {% if section %}
      <header>
        <p>{{ section }}</p>
        <h1>{{ title }}</h1>
      </header>
      {% endif %}

      {{ content | safe }}
    </main>
  </body>
</html>
